generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id_user            String   @id @default(uuid())
  email         String   @unique
  passwordHash String
  fullName      String?
  role          String     @default("client")
  id_tenant     String?
  createdAt    DateTime @default(now())
  updatedAt    DateTime @default(now()) @updatedAt
  
  tenant        Tenant?  @relation("TenantUsers", fields: [id_tenant], references: [id_tenant])
}

model Tenant {
  id_tenant            String   @id @default(uuid())
  name          String   @unique
  customDomain String?
  users         User[]   @relation("TenantUsers")
  id_plan       String?
  createdAt    DateTime @default(now())
  updatedAt    DateTime @default(now()) @updatedAt
}

